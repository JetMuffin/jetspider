extends layout

block content
    div.container
        div.row
            div.col-md-6
                h3 Spider Parameters
                form.form-horizontal
                    div.form-group
                        label.col-sm-2.control-label Redis Address
                        div.col-sm-10
                            input.form-control
                    div.form-group
                        label.col-sm-2.control-label Mongodb Address
                        div.col-sm-10
                            input.form-control
                    div.form-group
                        label.col-sm-2.control-label Start Url
                        div.col-sm-10
                            input.form-control
                    div.form-group
                        label.col-sm-2.control-label Allowed Domain
                        div.col-sm-10
                            input.form-control
                    div.btn-group
                        button.btn.btn-primary Run
                    div.btn-group
                        a.btn.btn-default Clear Cache
            div.col-md-6
                h3 Console
                div.console#console

block javascript
    script(src="/socket.io/socket.io.js")
    script(src="javascripts/main.js")